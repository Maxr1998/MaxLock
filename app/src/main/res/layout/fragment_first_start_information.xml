<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/first_start_page2"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:context="de.Maxr1998.xposed.maxlock.ui.firstStart.fragments.FragmentInformation">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/first_start_top_margin"
        android:layout_weight="1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:clipChildren="false">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/fs_phone_content_description"
            android:scaleType="centerInside"
            android:src="@drawable/first_start_phone" />

        <ImageView
            android:id="@+id/first_start_lock_icon"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/fs_lock_content_description"
            android:scaleType="centerInside"
            android:src="@drawable/ic_widget_on_72dp"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/first_start_title"
        style="@style/AppTheme.FirstStart.TitleText"
        android:layout_marginBottom="8dp"
        android:layout_weight="1.5"
        android:text="@string/fs_maxlock_description" />

</LinearLayout>