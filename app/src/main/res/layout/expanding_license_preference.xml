<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@android:id/widget_frame"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@android:id/icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/preference_margin"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="@dimen/preference_margin"
        android:layout_marginStart="8dp"
        android:contentDescription="expand"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_expand_more_24dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@android:id/text1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@color/legacy_highlight_dark"
        android:fontFamily="sans-serif"
        android:padding="8dp"
        android:textSize="12sp"
        android:textStyle="normal"
        android:typeface="monospace"
        android:visibility="gone"
        tools:text="@string/license_maxlock"
        tools:visibility="visible" />
</RelativeLayout>