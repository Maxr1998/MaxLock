<resources>
    <!-- Application theme. -->
    <style name="AppTheme" parent="AppTheme.Base" />

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main app colors -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowBackground">@color/default_window_background</item>
        <item name="highlightDrawable">@drawable/highlight_light</item>
        <item name="dividerColor">@color/divider_light</item>
        <item name="android:preferenceStyle">@style/Preference</item>
        <item name="android:checkBoxPreferenceStyle">@style/Preference.SwitchView</item>
        <item name="android:dialogPreferenceStyle">@style/Preference</item>
        <item name="android:editTextPreferenceStyle">@style/Preference.EditTextDialog</item>
        <item name="android:preferenceScreenStyle">@style/Preference</item>
        <item name="android:preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- To see copy and paste options over Toolbar -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- Dark application theme. -->
    <style name="AppTheme.Dark" parent="AppTheme.BaseDark" />

    <style name="AppTheme.BaseDark" parent="Theme.AppCompat.NoActionBar">
        <!-- Main app colors -->
        <item name="colorPrimary">@color/primary_red</item>
        <item name="colorPrimaryDark">@color/primary_red_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="windowBackground">@color/default_window_background_dark</item>
        <item name="highlightDrawable">@drawable/highlight_dark</item>
        <item name="dividerColor">@color/divider_dark</item>
        <item name="android:preferenceStyle">@style/Preference</item>
        <item name="android:checkBoxPreferenceStyle">@style/Preference.SwitchView</item>
        <item name="android:dialogPreferenceStyle">@style/Preference</item>
        <item name="android:editTextPreferenceStyle">@style/Preference.EditTextDialog</item>
        <item name="android:preferenceScreenStyle">@style/Preference</item>
        <item name="android:preferenceCategoryStyle">@style/Preference.Category</item>
        <item name="windowActionModeOverlay">true</item>
        <!-- To see copy and paste options over Toolbar -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="AppTheme.Dark.AMOLED">
        <item name="windowBackground">@android:color/black</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="AppTheme.FirstStart" parent="AppTheme.Base" />

    <style name="AppTheme.FirstStart.TitleText">
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="AppTheme.FirstStart.SubtitleText">
        <item name="android:maxLines">3</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:layout_weight">0.4</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="FakeDieDialog" parent="android:Theme.DeviceDefault.Dialog.NoActionBar" />

    <style name="TranslucentStatusBar" parent="AppTheme.Dark" />

    <style name="TranslucentStatusBar.Full" parent="TranslucentStatusBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Widget.TextView.NumPadKey" parent="@android:style/Widget.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:clickable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:background">?highlightDrawable</item>
        <item name="android:textColor">#ffffffff</item>
    </style>

    <style name="Preference">
        <item name="android:layout">@layout/preference</item>
    </style>

    <style name="Preference.EditTextDialog">
        <item name="android:positiveButtonText">@android:string/ok</item>
        <item name="android:negativeButtonText">@android:string/cancel</item>
        <item name="android:dialogLayout">@layout/edit_text_preference</item>
    </style>

    <style name="Preference.SwitchView">
        <item name="android:widgetLayout">@layout/preference_switch_view</item>
    </style>

    <style name="Preference.Category">
        <item name="android:layout">@layout/preference_category</item>
        <item name="android:selectable">false</item>
        <item name="android:shouldDisableView">false</item>
    </style>

    <style name="SplitButtonContainer" parent="@android:style/Holo.SegmentedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2</item>
        <item name="android:dividerPadding">8dip</item>
    </style>

    <style name="SplitButtonContainer.Light" parent="@android:style/Holo.Light.SegmentedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:weightSum">2</item>
        <item name="android:dividerPadding">8dp</item>
    </style>

    <style name="SplitButton" parent="@android:style/Widget.Holo.Button.Borderless">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Text_Button">
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="FlatButton">
        <item name="android:textAppearance">@style/Text_Button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>